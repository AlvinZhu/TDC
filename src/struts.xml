<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.custom.i18n.resources" value="mess"/>
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.ui.theme" value="simple"/>
    <package name="tdc" extends="struts-default">
        <action name="TaskInfoMetaQuery" class="com.tdc.TaskInfoMetaQueryAction">
            <result name="error">/error.jsp</result>
            <result name="success">/TaskInfoUpdate.jsp</result>
        </action>
        <action name="TaskInfoQuery" class="com.tdc.TaskInfoQueryAction">
            <result name="error">/error.jsp</result>
            <result name="success">/ExcelExportSuccess.jsp</result>
        </action>
        <action name="TaskInfoUpdate" class="com.tdc.TaskInfoUpdateAction">
            <result name="error">/error.jsp</result>
            <result name="success">/TaskInfoPrint.jsp</result>
        </action>
        <action name="FileUpload" class="com.tdc.FileUploadAction">
            <result name="success">ExcelImportSuccess.jsp</result>
        </action>
        <action name="TdcOut" class="com.tdc.TdcOutAction">
            <result name="success" type="stream">
                <param name="contentType">image/jpeg</param>
                <param name="inputName">fileInputStream</param>
                <param name="contentDisposition">inline;filename=${fileName}</param>
                <param name="bufferSize">1024</param>
            </result>
        </action>
    </package>
</struts>