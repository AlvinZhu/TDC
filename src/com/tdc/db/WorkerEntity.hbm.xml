<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.tdc.db.WorkerEntity" table="Worker" schema="" catalog="tdc">
        <id name="workerId">
            <column name="worker_id" sql-type="varchar" length="30" not-null="true"/>
        </id>
        <property name="deviceId">
            <column name="device_id" sql-type="varchar" length="30"/>
        </property>
        <property name="procedureName">
            <column name="procedure_name" sql-type="varchar" length="20"/>
        </property>
        <property name="workerName">
            <column name="worker_name" sql-type="varchar" length="20"/>
        </property>
    </class>
</hibernate-mapping>